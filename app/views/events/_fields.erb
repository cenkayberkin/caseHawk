<%= error_messages_for :event %>
<div class="event_field event_field_type">
  <%= f.select :type, event_types, {:selected => 'Appointment'}, :class => "new_event_type", :label => false %>
  <label for="event_type">New</label>
</div>
<div class="event_field event_field_name"><%= f.text_field :name, :label => false, :value => "Enter Event Title...", :class => 'inactive' %> </div>
<div class="event_field event_field_starts_at">
  <%= f.hidden_field :starts_at, :value => @date.to_s(:short_day_month_first) + " 12:00 PM" %>
  <div class="editable_date_wrapper">
    <div id="event_starts_at_datepicker" rel="start" class="event_starts_at editable editable_date" data-field-name="starts_at_date"><%= @date.to_s(:short_day_month_first) %></div>
  </div><div class="editable_time_wrapper">
    <div id="event_starts_at_timepicker" rel="start" class="event_starts_at editable editable_time" data-field-name="starts_at_time">12:00 PM</div> 
  </div>
  <label for="event_starts_at">Start</label>
</div>  
<div class="event_field event_field_ends_at">
  <%= f.hidden_field :ends_at, :value => @date.to_s(:short_day_month_first) + " 1:00 PM" %> 
  <div class="editable_date_wrapper">
    <div id="event_ends_at_datepicker" rel="end" class="event_ends_at editable editable_date" data-field-name="ends_at_date"><%= @date.to_s(:short_day_month_first) %></div>
  </div><div class="editable_time_wrapper">
    <div id="event_ends_at_timepicker" rel="end" class="event_ends_at editable editable_time" data-field-name="ends_at_time">1:00 PM</div> 
  </div>
  <label for="event_ends_at">End</label>
</div>
<ul class="tags"></ul>
<div class="event_field event_field_tags"><%= f.text_field :tags, :value => "Start typing to add tags...", :label => false, :class => 'inactive' %>
  <label for="event_tags" class="event_field_tags_add">Tag</label>
</div>
<div class="event_field event_field_remind"><%= f.check_box :remind, :label => false %> <label for="event_remind">Notify</label></div>
<%= submit_tag "Add Event" %>