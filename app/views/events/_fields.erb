<%= error_messages_for :event %>
<div class="event_field event_field_name"><%= f.text_field :name %> </div>
<div class="event_field event_field_type"><%= f.select :type, event_types, {}, :class => "new_event_type" %> </div>
<div class="event_field event_field_starts_at"><%= f.text_field :starts_at %> </div>
<div class="event_field event_field_ends_at"><%= f.text_field :ends_at %> </div>
<div class="event_field event_field_remind"><%= f.check_box :remind %> </div>
<div class="event_field event_field_tags"><%= f.text_field :tags %> </div>

<%= f.submit %>
