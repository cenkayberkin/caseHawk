<li id="<%= event.id %>" data-event-id="<%= event.id %>" data-name="<%= event.name %>" data-type="<%= event.type %>" data-starts-at="<%= event.starts_at %>" data-ends-at="<%= event.ends_at %>" class="event appointment"> 
  <a rel="facebox" href="#event-details_<%= event.id %>" class="event-title">
    <% if 0 == 1  %>
      <%= event.starts_at.to_s(:simple) %> &ndash; <%= event.ends_at.to_s(:simple) %> 
    <% end %>
    <%= event.name %>
  </a>
  <div class="event-details details_<%= event.id %>" id="event-details_<%= event.id %>">
     <%= render :partial => "events/details", :locals => { :event => event } %>
   </div>
</li>