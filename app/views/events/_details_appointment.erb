<li class="event_date">
  <span  data-field-name="starts_at_date" id="event-starts_at_date-<%= event.id%>">
    <%= event.starts_at.to_s(:Mdth) %>
  </span>
</li>
<li class="event_time">
  <span class="event_starts_at" data-field-name="starts_at_time" id="event-starts_at_time-<%= event.id%>">
    <%= event.starts_at.to_s(:simple) %>
  </span>
  <span class"event_time_separator">
    &#8212;
  </span>
  <span class="event_ends_at" data-field-name="ends_at_time" id="event-ends_at_time-<%= event.id%>">
    <%= event.ends_at.to_s(:simple) %>
  </span>
</li>
