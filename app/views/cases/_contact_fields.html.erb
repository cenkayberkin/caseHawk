<li class='contact'>
  <%= f.hidden_field '_destroy' %>
  <%= f.hidden_field :contact_id, :class => 'contact_id' %>

  <div class='role'>
    <%= f.label 'Role' %>

    <%= f.select :role, current_account.roles, :placeholder => 'Role', :class => 'role small' %>
  </div>

  <div class='name'>
    <%= f.label 'Contact' %>

    <%= select_tag 'contact_name',
        options_from_collection_for_select(current_user.contacts, 'id', 'name_and_email') %>
  </div>

  <%= link_to 'x', '#', :class => 'delete' %>
</li>
