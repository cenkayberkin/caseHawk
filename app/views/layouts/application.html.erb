<% content_for :menu do %>
  <%= render :partial => 'shared/nav' %>
<% end %>

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title><%= @page_title ? "#{@page_title} | #{AppConfig['app_name']}" : AppConfig['app_name'] %></title>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <%= javascript_include_tag 'jquery-1.3.2', 'application', 'event', 'calendar', 'calendar_interface', 
                                'jquery.jeditable.min', 'facebox', 'jquery-ui-1.7.2.custom.min',
                                'jquery.timepicker', 'jquery.jeditable.timepicker',
                                'jquery.pageless', 'jquery.jeditable.datepicker' %>
    <%= stylesheet_link_tag 'reset-fonts.css', 'application.css', 'facebox.css', 'jquery-ui-custom/jquery-ui-1.7.2.custom.css', 'jquery-ui-tweaks.css' %>
		<%= yield :head %>
  </head>
  <body>
    <div id="header">
      <div id="user-menu">
        <%= yield :user_menu %>
      </div>
      <h1>CaseHawk</h1>
      <div id="nav"> 
        <%= yield :menu %>
      </div>
    </div>
    <div id="page">
      <div id="content">
        <div id="notices">
          <%= flash_notices %>
        </div>
        <div id="main">

          <%= yield %>

        </div>
        <div id="sidebar">
          <%= yield :sidebar %>
        </div>        
      </div>
    </div>
    <div id="footer">
      <%= yield :footer %>
      <p>
      Copyright &copy; 2006 &ndash; <%= Date.today.to_s(:year) %> <a href="http://lawfortress.com">CaseHawk by Lawfortress LLC</a>
      </p>  
    </div>
  </body>
</html>