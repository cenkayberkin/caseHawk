<tr class="week-dates">
  <th class="week-hours">
    <span class="day-mon">
      <%= date.beginning_of_week.yesterday.strftime("%b") %>
    </span>
  </th>
  <% (date.beginning_of_week.yesterday..date.end_of_week.yesterday).each do |day| %>
    <th class="day-<%= day.wday %>">
      <% if day.mday == 1 %>
        <span class="day-mon">
          <%= day.strftime("%B") %>
        </span>
      <% end %>
      <span class="day-mday">
        <%= link_to day.mday, calendar_path(:date => day.to_s) %>
      </span>
    </th>
  <% end %>  
</tr>